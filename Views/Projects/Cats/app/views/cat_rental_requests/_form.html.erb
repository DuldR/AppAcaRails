

<section>
    <form action="<%= cat_rental_requests_url %>" method = "post">

        <label for="cat_id">Which Idiot Baby Do You Want?</label>
        <select id="cat_id" name="cat_rental_request[cat_id]">
            <% @cats.each do |cat| %>
                <option value="<%= cat.id %>"><%= cat.name %></option>
            <% end %>
        </select>

        <br>

        <label for="start">Start Date</label>
        <input id="start_date" type="date" name="cat_rental_request[start_date]">


        <br>

        <label for="end">End Date</label>
        <input id="end_date" type="date" name="cat_rental_request[end_date]">

        <br>

        <input type="submit" value="Add Rental">

    </form>

</section>
