<% if action == :edit %>
    <% action_url = cat_url(cat) %>
<% else %>
    <% action_url = cats_url %>
<% end %>

<section style="width: 33%;">
    <form action="<%= action_url %>" method = "post">

        <label for="name">Name</label>
        <input id="name" type="text" name="cat[name]" value="<%= cat.name %>">

        <br>

        <label for="birth_date">Date of Birth</label>
        <input id="birth_date" type="date" name="cat[birth_date]" value="<%= cat.birth_date %>">

        <br>

        <label for="color">Color</label>
        <select id="color" name="cat[color]">
            <option disabled <%= cat.color ? "" : "selected"%>>-- Please Select--</option>
            <option value="Red" <% cat.color == "Red" ? "selected" : ""%> >Red </option>
            <option value="Blue" <% cat.color == "Blue" ? "selected" : ""%> >Blue </option>
            <option value="Plaid" <% cat.color == "Plaid" ? "selected" : ""%> >Plaid </option>

        </select>

        <br>

        <label for="sex">Sex</label>
        <input id="sex" type="text" name="cat[sex]" value="<%= cat.sex %>">

        <br>

        <label for="description">Description</label>
        <textarea name="cat[description]"><%= cat.description %></textarea>


        <input type="submit" value="<%= action == :edit ? 'update cat' : 'add cat'%>">

    </form>

</section>
