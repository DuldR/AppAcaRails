<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% http_method = band.persisted? ? "PATCH" : "POST" %>
<% button_text = band.persisted? ? "Update Band!" : "Create Band!" %>
<% label_text = band.persisted? ? "Edit the Name: " : "Add the Name: " %>

<section> 
    <form action="<%= action_url %>" method="POST">

        <input type="hidden" name="_method" value="<%= http_method %>">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label for="name"><%= label_text %></label>
        <input type="text" name="band[name]" id="name" value="<%= band.name %>">

        <br>
        <input type="submit" value="<%= button_text %>">
    </form>
</section>