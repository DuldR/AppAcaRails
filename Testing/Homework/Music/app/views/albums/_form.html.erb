<% action_url = album.persisted? ? album_url(album) : albums_url %>
<% http_method = album.persisted? ? "PATCH" : "POST" %>
<% button_text = album.persisted? ? "Update Album!" : "Create Album!" %>
<% label_text = album.persisted? ? "Edit the Album: " : "Add an Album: " %>

<section> 
    <form action="<%= action_url %>" method="post">

        <input type="hidden" name="_method" value="<%= http_method %>">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">


        <label for="band">Choose a Band:</label>
        <select name="album[band_id]" id="bands">

            <option value="">--Please Choose A Band--</option>
            <% @bands.each do |band| %>

            <option value="<%= band.id %>" <%= band.id == @album.band_id ? "selected" : "" %> > <%= band.name %> </option>

            <% end %>
        </select>

        <br>
        
        <label for="name"> <%= album.persisted? ? "Edit" : "Add"%> the Title:</label>
        <input type="text" name="album[title]" id="title" value="<%= @album.title %>">

        <br>
        <label for="name"><%= album.persisted? ? "Edit" : "Add"%> the Year:</label>
        <input type="text" name="album[year]" id="title" value="<%= @album.year %>">

        <br>

        <div>
            <label for="Studio Album?">Live or Studio?</label>
            <label for="live">Live</label>
            <input type="radio" id="live" value="false" name="album[studio]">
            <label for="studio">Studio</label>
            <input type="radio" id="studio" value="true" name="album[studio]">
        </div>
        <br>
        <input type="submit" value="Submit">
    </form>


</section>