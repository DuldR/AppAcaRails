<% action_url = comment.persisted? ? comment_url(comment) : comments_url %>
<% http_method = comment.persisted? ? "PATCH" : "POST" %>
<% id = comment.persisted? ? "#{comment.commentable_id}" : "" %>
<% title = comment.persisted? ? "#{comment.title}" : "" %>
<% body = comment.persisted? ? "#{comment.body}" : "" %>
<% type = comment.persisted? ? "#{comment.commentable_type}" : "" %>
<% label_text = comment.persisted? ? "Edit the Comment " : "Add a Comment " %>
<% button_text = comment.persisted? ? "Update Comment" : "Create Comment" %>


<section> 
    <form action="<%= action_url %>" method="POST">

        <input type="hidden" name="_method" value="<%= http_method %>">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label for="id">Id?</label>
        <input type="text" name="comment[commentable_id]" id="id" value="<%= id %>">

        <br>

        <label for="type">For?</label>
        <input type="text" name="comment[commentable_type]" id="type" value="<%= type %>">

        <br>

        <label for="title">Title</label>
        <input type="text" name="comment[title]" id="title" value="<%= title %>">

        <br>

        <label for="body"><%= label_text %></label>
        <input type="text" name="comment[body]" id="body" value="<%= body %>">
        
        <br>

        <input type="submit" value="<%= button_text %>">
    </form>
</section>